<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"

    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/linearLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <!--leaving this for reference, but we are using styled version now-->
    <ImageView
        android:id="@+id/exo_artwork"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:contentDescription="@string/artwork"
        android:src="@color/black_opacity_70"
        android:visibility="gone"
        app:layout_constraintBottom_toTopOf="@+id/relativeLayout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:visibility="visible" />

    <RelativeLayout
        android:id="@+id/relativeLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/black_opacity_70"
        android:layoutDirection="ltr"
        android:orientation="vertical"
        android:paddingLeft="20dp"
        android:paddingTop="5dp"
        android:paddingRight="20dp"
        android:paddingBottom="5dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/exo_controls"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="4dp">


            <ImageButton
                android:id="@+id/exo_volume"
                style="@style/ExoMediaButton.Volume"
                android:layout_width="0dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/exo_back"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageButton
                android:id="@+id/exo_back"
                style="@style/ExoMediaButton.Back"
                android:layout_width="0dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/exo_play"
                app:layout_constraintStart_toEndOf="@+id/exo_volume"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageButton
                android:id="@+id/exo_play"
                style="@style/ExoMediaButton.Play"
                android:layout_width="0dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/exo_pause"
                app:layout_constraintStart_toEndOf="@+id/exo_back"
                app:layout_constraintTop_toTopOf="parent" />


            <ImageButton
                android:id="@+id/exo_pause"
                style="@style/ExoMediaButton.Pause"
                android:layout_width="0dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/exo_prev_button"
                app:layout_constraintStart_toEndOf="@+id/exo_play"
                app:layout_constraintTop_toTopOf="parent" />


            <ImageButton
                android:id="@+id/exo_prev_button"
                style="@style/ExoMediaButton.Previous"
                android:layout_width="0dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/exo_rew"
                app:layout_constraintStart_toEndOf="@+id/exo_pause"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageButton
                android:id="@+id/exo_rew"
                style="@style/ExoMediaButton.Rewind"
                android:layout_width="0dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/exo_ffwd"
                app:layout_constraintStart_toEndOf="@+id/exo_prev_button"
                app:layout_constraintTop_toTopOf="parent" />


            <ImageButton
                android:id="@+id/exo_ffwd"
                style="@style/ExoMediaButton.FastForward"
                android:layout_width="0dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@id/exo_next_button"
                app:layout_constraintStart_toEndOf="@+id/exo_rew"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageButton
                android:id="@+id/exo_next_button"
                style="@style/ExoMediaButton.Next"
                android:layout_width="0dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/exo_share"
                app:layout_constraintStart_toEndOf="@+id/exo_ffwd"
                app:layout_constraintTop_toTopOf="parent" />


            <ImageButton
                android:id="@+id/exo_share"
                style="@style/ExoMediaButton.Featured.Share"
                android:layout_width="0dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/exo_cc"
                app:layout_constraintStart_toEndOf="@+id/exo_next_button"
                app:layout_constraintTop_toTopOf="parent" />


            <ImageButton
                android:id="@+id/exo_cc"
                style="@style/ExoMediaButton.Cc"
                android:layout_width="0dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/exo_pip"
                app:layout_constraintStart_toEndOf="@+id/exo_share"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageButton
                android:id="@+id/exo_pip"
                style="@style/ExoMediaButton.Featured.Pip"
                android:layout_width="0dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/exo_fullscreen"
                app:layout_constraintStart_toEndOf="@+id/exo_cc"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageButton
                android:id="@+id/exo_fullscreen"
                style="@style/ExoMediaButton.Featured.FullScreen"
                android:layout_width="0dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/exo_pip"
                app:layout_constraintTop_toTopOf="parent" />


        </androidx.constraintlayout.widget.ConstraintLayout>

        <LinearLayout
            android:id="@+id/time_bar_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/exo_controls"

            android:focusable="false"
            android:focusableInTouchMode="false"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/exo_position"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:focusable="false"
                android:focusableInTouchMode="false"
                android:includeFontPadding="false"
                android:paddingHorizontal="@dimen/control_text_padding"
                android:textColor="@color/control_text_color"
                android:textSize="@dimen/control_text_size"
                android:textStyle="bold"
                tools:text="2:45" />

            <com.google.android.exoplayer2.ui.DefaultTimeBar
                android:id="@+id/exo_progress"
                style="@style/CustomizedTimeBar"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:focusable="false"
                android:focusableInTouchMode="false" />

            <TextView
                android:id="@+id/exo_duration"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:focusable="false"
                android:focusableInTouchMode="false"
                android:includeFontPadding="false"
                android:paddingHorizontal="@dimen/control_text_padding"
                android:textColor="@color/control_text_color"
                android:textSize="@dimen/control_text_size"
                android:textStyle="bold"
                tools:text="12:45" />

        </LinearLayout>

    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>